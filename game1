//✨
void Displayboard(char board[ROW][COL], int row, int col)
{
	int i = 0;
	int j = 0;
	for (i=0; i< row; i++)
	{
		//1.打印一行数据
		for(j=0; j < col; j++)
		{
			printf(" %c ",board[i][j]);
			if(j < col-1)
			{
				printf("|");
			}
	    }
		printf("\n");

		//2.打印分割行
		if(i < row-1)
		{
			for(j = 0; j < col; j++)
			{
				printf("---");
				if(j < col-1)
				printf("|");
			}
			printf("\n");
		}
	}
}
